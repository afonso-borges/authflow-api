{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@auth/*": ["app/src/auth/*"],
      "@user/*": ["app/src/users/*"],
      "@config/*": ["app/src/config/*"],
      "@shared/*": ["app/src/shared/*"],
      "@prisma/*": ["app/prisma/*"],
      "@interfaces/*": ["app/src/shared/interfaces/*"],
      "@filters/*": ["app/src/shared/filters/*"],
      "@interceptors/*": ["app/src/shared/interceptors/*"],
      "@pipes/*": ["app/src/shared/pipes/*"],
      "@test/*": ["test/*"]
    }
  },
  "include": ["app/src/**/*", "app/prisma/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
